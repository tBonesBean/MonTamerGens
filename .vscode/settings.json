{
	"markdown.validate.enabled": true,
	"projectManager.any.ignoredFolders": [
		"node_modules",
		"out",
		"typings",
		"tests",
		"__pychache__",
		".tmp.driveupload",
		".tmp.drivedownload",
		".vscode",
		".idea"
	],
	"editor.formatOnSave": true,
	"files.autoSave": "afterDelay",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "ZedMono Nerd Font",
	"editor.wordWrap": "off",
	"python.globalModuleInstallation": false,
	"python.defaultInterpreterPath": "D:/distros/python/python.exe",
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.fontFamily": "ZedMono Nerd Font Propo",
		"files.autoSave": "afterDelay"
	},
	"editor.allowVariableFontsInAccessibilityMode": true,
	"editor.codeLens": false,
	"editor.comments.ignoreEmptyLines": false,
	"editor.defaultColorDecorators": "always",
	"editor.defaultFoldingRangeProvider": "esbenp.prettier-vscode",
	"editor.definitionLinkOpensInPeek": true,
	"editor.experimental.asyncTokenization": false,
	"editor.experimentalGpuAcceleration": "on",
	"editor.glyphMargin": false,
	"editor.gotoLocation.multipleDefinitions": "gotoAndPeek",
	"editor.inlayHints.padding": true,
	"editor.lineNumbers": "interval",
	"editor.linkedEditing": true,
	"editor.occurrencesHighlightDelay": 500,
	"editor.padding.top": 4,
	"editor.padding.bottom": 12,
	"editor.showFoldingControls": "always",
	"editor.stickyScroll.enabled": false,
	"editor.stickyScroll.scrollWithEditor": false,
	"editor.tabCompletion": "on",
	"editor.unicodeHighlight.includeStrings": false,
	"editor.unicodeHighlight.includeComments": false,
	"editor.unicodeHighlight.invisibleCharacters": false,
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "line-thin",
	"editor.formatOnType": true,
	"diffEditor.experimental.showEmptyDecorations": false,
	"editor.minimap.autohide": "scroll",
	"editor.minimap.enabled": true,
	"editor.inlineSuggest.edits.allowCodeShifting": "horizontal",
	"editor.inlineSuggest.experimental.emptyResponseInformation": false,
	"editor.quickSuggestions": {
		"comments": "inline",
		"strings": "inline"
	},
	"chatgpt.runCodexInWindowsSubsystemForLinux": true,
	"chat.checkpoints.enabled": false,
	"geminicodeassist.enableTelemetry": false,
	"geminicodeassist.agent.additionalTrustedCertificates": "",
	"CodeGPT.apiKey": "Ollama"
}
